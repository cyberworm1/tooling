# Autotask API Configuration (Required)
# Autotask API base URL, e.g. https://webservicesX.autotask.net/ATServicesRest
AUTOTASK_API_BASE_URL=

# Integration code (API user integration key)
AUTOTASK_INTEGRATION_CODE=

# User code (API user username)
AUTOTASK_USER_CODE=

# Resource ID for the user (used for filtering assigned tickets/projects)
AUTOTASK_RESOURCE_ID=

# Optional Configuration
# Request timeout in seconds (default: 30.0)
AUTOTASK_TIMEOUT=30.0

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# Maximum retry attempts for failed requests (default: 3)
MAX_RETRIES=3

# Server Configuration
# Port for the MCP server (default: 10800)
# If this port is in use, the server will automatically try 10801, 10802, etc.
SERVER_PORT=10800

# MCP endpoint path (default: /autotask-mcp)
# This makes it easy to distinguish from other MCP services
MCP_ENDPOINT=/autotask-mcp

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
